# Server Configuration
PORT=4000
NODE_ENV=development

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Direct Postgres connection (server-side only)
# Get from Supabase: Project Settings → Database → Connection string → URI
# Example format includes sslmode=require (do NOT expose to frontend)
DATABASE_URL=postgresql://postgres:<password>@db.<project-ref>.supabase.co:5432/postgres?sslmode=require

# Optional SSL Mode (TypeORM)
# If set to require, ssl is enabled with rejectUnauthorized=false
PGSSLMODE=require

# Application Configuration
API_PREFIX=api
SWAGGER_ENABLED=true
