{
  "name": "mbspro",
  "version": "1.0.0",
  "description": "MBSPro - Monorepo with Next.js frontend and NestJS backend",
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel --recursive run dev",
    "build": "pnpm --recursive run build",
    "lint": "pnpm --recursive run lint",
    "test": "pnpm --recursive run test",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "seed": "pnpm --filter=api run seed",
    "clean": "node scripts/clean.js",
    "fresh": "pnpm clean && pnpm install",
    "reset": "pnpm clean && pnpm install && pnpm db:up && pnpm seed"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  }
}
